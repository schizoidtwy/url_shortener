<div class="row row-centered">
  <div class="col-md-3 col-md-offset-4">
    <h2>Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: "E-mail" %>
        <%= f.input :password, required: false, label:"Senha" %>
        <%= f.input :remember_me, label:"Lembrar", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Logar" %>
      </div>
    <% end %>
  </div>
</div>
